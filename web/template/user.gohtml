{{ define "title" }}{{ .Nickname }}{{ end }}

{{ define "head" }}{{ end }}

{{ define "body" }}
  {{ $authUser := GetUser }}
  {{ $isSelf := eq .Username $authUser.Username }}
  <div x-data="{ editing: false }">
    <div x-show="! editing">
      <h1 class="big-header">{{ .Nickname }}</h1>
      <h2 class="general-header">@{{ .Username }}&nbsp;</h2>
      <div class="bio">
        <p>{{ .Bio }}</p>
        <span class="location">{{ .Location }}</span>
      </div>
      <button
        @click="editing = ! editing"
        class="brand-button"
        aria-label="Edit Profile"
      >
        Edit Profile
      </button>
    </div>
    <div x-show="editing">
      <p>Hi u can edit here</p>
      <button
        @click="editing = ! editing"
        class="brand-button"
        aria-label="Cancel Editing"
      >
        Cancel
      </button>
    </div>
  </div>
  <p>
    This is
    {{ if not $isSelf }}
      not
    {{ end }}
    you!
  </p>
{{ end }}
